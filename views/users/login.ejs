<% layout("/layouts/boilerPlate") %>

    <div class="row login-box mt-5 mb-5 ">
        <br>
        <div class="col-5 m-auto offset-2 m-auto mt-3">
            <h2 class="col-6 mb-4">Login</h2>
            <form action="/login" method="post" class="needs-validation" novalidate>
                <div class="mb-3">
                    <label for="username" class="form-label">Username</label>
                    <input type="text" name="username" id="username" class="form-control" required>
                </div>
                <div class="mb-3 form-item">
                    <label for="password" class="form-label">Password</label>
                    <input type="password" name="password" id="password" class="form-control" required>
                    <i class="fas fa-eye" id="eye"></i>
                </div>
                <button class="btn btn-dark login-btn">Login</button>
            </form>
            <br>
            <center>
                <p class="login-op"><a class="login-link" href="/signup"><b>Create new account</b></a></p>
            </center>
        </div>
    </div>

